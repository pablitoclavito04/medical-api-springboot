{
  "info": {
    "name": "Medical API - JWT Template",
    "_postman_id": "b9e9c5e2-1f5b-4c9a-9a1c-000000000001",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin1234!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.environment.set('token', json.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Security - Patients without token -> 401",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/patients",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "patients"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 401', function(){ pm.response.to.have.status(401); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Patients - Create (requires token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/patients",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "patients"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"dni\": \"12345678A\",\n  \"firstName\": \"Ana\",\n  \"lastName\": \"López\",\n  \"phone\": \"600000000\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
              "const json = pm.response.json();",
              "pm.environment.set('patientId', json.id);",
              "pm.test('Location header', function(){ pm.expect(pm.response.headers.get('Location')).to.include('/patients/'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Patients - List (requires token)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/patients?page=0&size=10&sort=id,asc",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "patients"
          ],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            },
            {
              "key": "sort",
              "value": "id,asc"
            }
          ]
        }
      }
    },
    {
      "name": "Appointments - Create (requires token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/appointments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "appointments"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"doctorId\": 1,\n  \"patientId\": 1,\n  \"startAt\": \"2026-01-05T10:00:00\",\n  \"endAt\": \"2026-01-05T10:30:00\",\n  \"reason\": \"Revisión\"\n}"
        }
      }
    }
  ]
}